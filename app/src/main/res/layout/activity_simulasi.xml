<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="24dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formulir Prediksi Kanker Tiroid"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#009688"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editAge" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Usia (contoh: 45)" android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editGender" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Gender (m/f)" android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editSmoking" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Smoking (1 = ya, 0 = tidak)" android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editHxSmoking" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Hx Smoking (1/0)" android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editHxRadiotherapy" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Hx Radiothreapy (1/0)" android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editThyroidFunction" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Thyroid Function (contoh: 0.6)" android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editPhysicalExamination" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Physical Examination (0.5)" android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editAdenopathy" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Adenopathy (0.6)" android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editPathology" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Pathology (0.4)" android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editFocality" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Focality (1/0)" android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editRisk" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Risk (0.2)" android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editT" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ukuran Tumor T (0.7)" android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editN" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Status Nodus N (0.3)" android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editM" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Metastasis M (0.2)" android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editStage" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Stage (0.5)" android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editResponse" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Response (0.3)" android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnPrediksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prediksi"
            android:textStyle="bold"
            android:backgroundTint="#009688"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:padding="14dp" />

        <TextView
            android:id="@+id/txtHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prediction Result"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:padding="16dp"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
